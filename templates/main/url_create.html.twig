{% extends 'base.html.twig' %}

{% block title %}Получение кода по ссылке{{ parent() }}{% endblock %}

{% block content %}
    <label for="inputPassword5" class="form-label">Your Url</label>
    <input type="password" id="inputPassword5" class="form-control" aria-describedby="passwordHelpBlock">
    <div id="passwordHelpBlock" class="form-text">

    </div>
    <section class="short_form">
        <form action="{{ form_action }}" method="post">
            <div class="mb-3 form-check">
                <label class="form-check-label" for="exampleCheck1">
                    Url для скорочення:
                    <input type="url" class="form-control" name="url" id="url_short" aria-describedby="emailHelp">
                </label>
                <button type="submit" class="btn btn-primary">Получить код</button>
            </div>
        </form>
    </section>


{% endblock %}